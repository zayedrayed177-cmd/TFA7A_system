<div>
    <h2 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
        <%= locale.dashboard.navigation.main %>
    </h2>
    <div class="mt-3 space-y-1">
        <a href="/" class="sidebar-link <%= path === '/' ? 'active' : '' %>">
            <i class="fas fa-home"></i>
            <span class="ml-3"><%= locale.dashboard.navigation.home %></span>
        </a>
    </div>
</div>

<div>
    <h2 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
        <%= locale.dashboard.commands.title %>
    </h2>
    <div class="mt-3 space-y-1">
        <a href="/commands/general" class="sidebar-link <%= path.startsWith('/commands/general') ? 'active' : '' %>">
            <i class="fas fa-terminal"></i>
            <span class="ml-3"><%= locale.dashboard.commands.general %></span>
        </a>
        <a href="/commands/moderation" class="sidebar-link <%= path.startsWith('/commands/moderation') ? 'active' : '' %>">
            <i class="fas fa-shield-alt"></i>
            <span class="ml-3"><%= locale.dashboard.commands.moderation %></span>
        </a>
    </div>
</div> 
