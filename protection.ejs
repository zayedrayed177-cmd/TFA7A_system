}

.save-bar-text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #9CA3AF;
    font-size: 0.875rem;
}

.save-bar-buttons {
    display: flex;
    gap: 1rem;
}

.save-button, 
.reset-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
