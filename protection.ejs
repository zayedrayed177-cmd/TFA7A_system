        <div class="stat-icon text-blue-500">
            <i class="fas fa-shield-alt"></i>
        </div>
        <div class="stat-content">
            <h3 class="stat-value" id="activeProtections">0</h3>
            <p class="stat-label"><%= locale.dashboard.protection.stats.activeProtections %></p>
        </div>
    </div>
    
