        <div class="stat-icon text-green-500">
            <i class="fas fa-user-shield"></i>
        </div>
        <div class="stat-content">
            <h3 class="stat-value" id="protectedRoles">0</h3>
            <p class="stat-label"><%= locale.dashboard.protection.stats.protectedRoles %></p>
