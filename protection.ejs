    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.1);
}

.select-container {
    position: relative;
    margin-top: 1rem;
}

.select-label {
    display: block;
    color: #9CA3AF;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
}

.multi-select {
    width: 100%;
    min-height: 2.5rem;
    padding: 0.5rem;
    background: #1F2937;
    border: 1px solid #374151;
    border-radius: 0.5rem;
    color: white;
