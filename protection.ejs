            <p class="stat-label"><%= locale.dashboard.protection.stats.whitelistedBots %></p>
        </div>
    </div>

    <div class="stat-card red-glow fade-in-mobile" style="animation-delay: 0.3s;">
        <div class="stat-icon text-red-500">
            <i class="fas fa-ban"></i>
        </div>
